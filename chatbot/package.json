{
  "name": "todo-chatbot",
  "version": "1.0.0",
  "description": "Phase III: AI-Powered Todo Chatbot using OpenAI Agents SDK and MCP",
  "type": "module",
  "scripts": {
    "dev:mcp": "tsx --watch mcp-server/index.ts",
    "dev:agent": "tsx --watch agent/api/server.ts",
    "dev:chatkit": "cd chatkit && npm run dev",
    "build": "tsc",
    "test": "vitest",
    "test:unit": "vitest run tests/skills",
    "test:integration": "vitest run tests/integration",
    "test:security": "vitest run tests/security",
    "test:performance": "vitest run tests/performance",
    "start:mcp": "node --loader ts-node/esm mcp-server/index.ts",
    "start:agent": "node dist/agent/api/server.js",
    "start:chatkit": "cd chatkit && npm run preview"
  },
  "keywords": [
    "chatbot",
    "todo",
    "openai",
    "mcp",
    "agents"
  ],
  "author": "Phase III Implementation Team",
  "license": "UNLICENSED",
  "private": true,
  "engines": {
    "node": ">=18.0.0"
  },
  "dependencies": {
    "@modelcontextprotocol/sdk": "^1.25.1",
    "axios": "^1.13.2",
    "cors": "^2.8.5",
    "express": "^5.2.1",
    "openai": "^6.15.0"
  },
  "devDependencies": {
    "@types/cors": "^2.8.19",
    "@types/express": "^5.0.6",
    "@types/node": "^25.0.3",
    "@vitest/ui": "^4.0.16",
    "ts-node": "^10.9.2",
    "tsx": "^4.21.0",
    "typescript": "^5.9.3",
    "vitest": "^4.0.16"
  }
}
